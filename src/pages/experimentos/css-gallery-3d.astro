<style>
  .banner {
    width: 100%;
    height: 100vh;
    text-align: center;
    overflow: hidden;
    position: relative;
  }
  .banner .slider {
    position: absolute;
    width: 200px;
    height: 250px;
    top: 10%;
    left: calc(50% - 100px);
    transform-style: preserve-3d;
    transform: perspective(1000px);
    animation: autoRun 20s linear infinite;
  }
  @keyframes autoRun {
    from{
      transform: perspective(1000px) rotateX(-16deg) rotateY(0deg);
    } to {
      transform: perspective(1000px) rotateX(-16deg) rotateY(360deg);
    }
  }
  .banner .slider .item {
    position: absolute;
    inset: 0 0 0 0;
    transform-style: preserve-3d;
    transform:
      rotateY(calc( (var(--position) - 1) * (360 / var(--quantity)) * 1deg))
      translateZ(550px);
  }
  .banner .slider .item .item__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 0 0;
    position: absolute;
    inset: 0 0 0 0;
    backface-visibility: hidden;
  }
  .banner .slider .item .item__backface{
    position: absolute;
    inset: 0 0 0 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-main-2);
    transform: rotateY(180deg);
    backface-visibility: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .banner .slider .item .item__backface .item__backface__img{
    width: 80%;
  }

  .banner .content{
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: min(1400px, 100vw);
    height: max-content;
    padding-bottom: 100px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }
</style>
