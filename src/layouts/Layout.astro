---
import '../styles/global.css';
import Header from '../components/Header.astro';
import { AstroFont } from "astro-font";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/public/favicon-solate.ico" /> -->
		<link rel="icon" type="image/png" href="/favicon-solate-2025.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<AstroFont
      config={[
        {
          src: [],
          name: "Share Tech Mono",
          // Google Fonts URL
          googleFontsURL: 'https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap',
          preload: true,
          display: "swap",
          selector: ".monotype",
          fallback: "monospace",
        },
      ]}
    />
		<script src="https://kit.fontawesome.com/a236ea0636.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<Header />
		
		<slot />

	</body>
</html>
